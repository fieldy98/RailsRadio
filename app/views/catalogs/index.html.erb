<p id="notice"><%= notice %></p>

<h1>Listing Catalogs</h1>

<table>
  <thead>
    <tr>
      <th>File locatoin</th>
      <th>Artist</th>
      <th>Album artist</th>
      <th>Album</th>
      <th>Track number</th>
      <th>Title</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.file_locatoin %></td>
        <td><%= catalog.artist %></td>
        <td><%= catalog.album_artist %></td>
        <td><%= catalog.album %></td>
        <td><%= catalog.track_number %></td>
        <td><%= catalog.title %></td>
        <td><%= catalog.cover %></td>
        <td><%= link_to 'Show', catalog %></td>
        <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
        <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

