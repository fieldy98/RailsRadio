<script>
  $(document).ready(function(){
    $('.collapsible').collapsible({
      accordion : true // A setting that changes the collapsible behavior to expandable instead of the default accordion style
    });
  });
</script>
<body>
  <div class="container">
    <% q = Fixbox1[0]%>
    <div class="row">
      <table class="striped">
        <thead>
          <tr>
              <th data-field="artist">Artist</th>
              <th data-field="album">Album</th>
              <th data-field="number">Track Number</th>
              <th data-field="title">Track Title</th>
          </tr>
        </thead>
        <tbody>
          <% @mp3s.each do |album| %>
              <tr>
                <td><%= album.artist %></td>
                <td><%= album.album %></td>
                <td><%= album.track_no %></td>
                <td><a href="#!" class="waves-effect waves-light btn modal-trigger btn-flat" onclick="
                  window.sm2BarPlayers[0].actions.play(<%= q %>);
                  ">
                  <%= album.title %>
                  </a></td>
              </tr>
              <% q.increment! %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <br>
  <br>
</body>
